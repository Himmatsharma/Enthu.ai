
<div class="container">

    <h2 style="margin: 40px;">{{viewTitle}}</h2>

    <form action="/add" method="POST" autocomplete="off">

        <div class="form-group">

            <label for="fullName">Full Name:</label>

            <input type="text" class="" id="fullName" placeholder="Enter Full Name" name="fullName">

        </div>

        <div class="form-group">

            <label for="email">Email:</label>
            
            <input type="email" id="email" placeholder="Enter email" name="email">
       
        </div>

         <div class="form-group">

            <label for="mobile">Mobile:</label>

            <input type="text" class="" id="mobile" placeholder="Enter Mobile" name="mobile">

        </div>

         <div class="form-group">

            <label for="city">City:</label>

            <input type="text" class="" id="city" placeholder="Enter City" name="city">

        </div>

        
        <button type="submit" class="btn btn-primary">Submit</button>
    
    </form>

</div>